<h1>Editing Book</h1>

<%= form_with model:@book, url:update_book_path(@book.id),method: :patch do |f| %>
  <div class="field">
  <%= f.label :title, "Title" %>
  <%= f.text_field :title %>
	</div>
	<div class="field">
	<%= f.label :body, "Body" %>
  <%= f.text_area :body %>
  </div>
  <%= f.submit 'Update Book' %>
<% end %>